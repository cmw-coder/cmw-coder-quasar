{
  "extends": "fastify-tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "paths": {
      "app/*": ["./*"],
      "components/*": ["./src/components/*"],
      "plugins/*": ["./src/plugins/*"],
      "routes/*": ["./src/routes/*"],
      "statics/*": ["./src/statics/*"],
      "types/*": ["./src/types/*"],
      "utils/*": ["./src/utils/*"]
    },
    "outDir": "dist"
  },
  "include": ["server.ts", "src/**/*.ts"]
}
