{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "target": "ES2015",
    "lib": ["ES2022"],
    "types": ["reflect-metadata"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "service/*": ["./service/*"],
      "main/*": ["./main/*"],
      "preload/*": ["./preload/*"],
      "root/*": ["../*"],
      "shared/*": ["./shared/*"],
      "web/*": ["../src/*"]
    },
    "outDir": "dist"
  },
  "include": [
    "*.ts",
    "main/**/*.ts",
    "preload/**/*.ts",
    "shared/**/*.ts",
    "service/**/*.ts"
  ]
}
